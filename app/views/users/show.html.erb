<div class="row">
	<div class="col-sm-7">
		<div class="page-header">
			<!-- Displaying a list of Organizations owned by the current User -->
			<%= link_to "Create Organization", new_organization_path, class: "btn btn-success" %>
			<%= link_to "Back to Organization", organizations_path, class: "btn btn-primary"  %>
				<br><br>
				<div class="card">
					<h4 class="card-header"><strong>My Organizations</strong>  <span class="badge badge-success"><%= @user.organizations.count %></span></h4>
					<% if @user.created_organizations.any? %>
						<% @user.created_organizations.each do |organization| %>
						 <div class="card-body">
							<h5 class="card-title"><%= link_to organization.name, organization_path(organization) %></h5>
							<hr>
						<% end %>
					<% else %>
							<h5>You have no Organization created yet!</h5>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<!--Displaying list of Templates crated or built by the current User-->
	<div class="col-sm-4 offset-1">
		<br><br><br>
		<div class="page-header">
			<h4 class="card-header"><strong>My Templates</strong>  <span class="badge badge-secondary"><%= @user.templates.count %></span></h4>
			<div class="card">
				<% if @user.templates.any? %>
					<% @user.templates.each do |template| %>
						<div class="card-body">
						    <h5><%= template.name%></h5>
						    <hr>
						<% end %>
				<% else %>
					<h5>You have no Templates created yet!</h5>
					</div>	
				<% end %>
			</div>
		</div>
	</div>
</div>





